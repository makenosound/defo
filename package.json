{
  "name": "@icelab/defo",
  "description": "A dynamic DOM binding library",
  "keywords": [
    "dom",
    "library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/makenosound/defo"
  },
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint:all": "npm run lint:types && npm run lint:prettier",
    "lint:types": "tsc --noEmit --pretty",
    "lint:prettier": "prettier --check .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^3.2.4"
  }
}
